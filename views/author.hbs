<h2>Authors</h2>
<ul class="authors">
    {{#each data}}
        <div class='author'>
            <a href="/author/{{this.author_id}}"><img class="authorPicture" src="{{this.portrait_url}}"></img></a>
            <li>{{this.first_name}} {{this.last_name}}</li>
            <li>{{this.biography}}</li>
            {{#each books}}
                <a href="/book/{{this.id}}">{{this.title}}</a><br/>
            {{/each}}
            <a href="/author/{{this.author_id}}/edit"><i class="fa fa-edit"></i></a>
            <a href="/author/{{this.author_id}}/confirmDelete"><i class="fa fa-remove"></i></a>
        </div>
    {{/each}}
</ul>
<a href="/author/addAuthor">Add an Author</a>
