<h2>Authors</h2>
<form class="" action="/author" method="GET">
    <label for="authorSearch">Search for an author:
        <input type="text" name="authorSearch" id="authorSearch" placeholder="Search for an author">
    </label>
    <input type="submit" name="name" value="submit">
</form>
<ul class="authors">
    {{#each data}}
        <div class='author'>
            <div>
                <a href="/author/{{this.author_id}}"><img class="authorPicture" src="{{this.portrait_url}}"></img></a>
            </div>
            <div>
                <li class="authorName">{{this.first_name}} {{this.last_name}}</li>
                <li class="biography">{{this.biography}}</li>
                <h3>Books Written:</h3>
                {{#each books}}
                    <a href="/book/{{this.id}}">{{this.title}}</a><br/>
                {{/each}}
                <a href="/author/{{this.author_id}}/edit"><i class="fa fa-edit edit"></i></a>
                <a href="/author/{{this.author_id}}/confirmDelete"><i class="fa fa-remove remove"></i></a>
            </div>
        </div>
    {{/each}}
</ul>
<p class="authorAmount">
    There are {{dataLength}} authors shown!!!
</p>
{{#each authorArrays}}
    <a href="/author/page/{{@index}}">Page {{@index}}</a>
{{/each}}
<a class="addAuthor" href="/author/addAuthor">Add an Author</a>
