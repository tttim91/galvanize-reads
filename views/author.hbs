<h2>Authors</h2>
<ul class="authors">
    {{#each authors}}
        <div class='author'>
            <a href="/author/{{this.id}}"><img class="authorPicture" src="{{this.portrait_url}}"></img></a>
            <li>{{this.first_name}} {{this.last_name}}</li>
            <li>{{this.biography}}</li>
            <a href="/author/{{this.id}}/edit"><i class="fa fa-edit"></i></a>
            <a href="/author/{{this.id}}/delete"><i class="fa fa-remove"></i></a>
        </div>
    {{/each}}
</ul>
<a href="/author/addAuthor">Add an Author</a>
